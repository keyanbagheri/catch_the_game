<body>
  <h1> Results</h1>
  <h3><%= @title %></h3>
  <br>
  <br>
  <br>
  <%@results.each do |team|%>
  <div>
    <sidebar>
      <img class="team_logo" src="<%=team.photo_url%>"/>
      <br>
      <br>
      <h2><%=team.market%></h2>
      <h3><%=team.name%></h3>
      <h3>(<%=team.conference%>)</h3>
      <br>
    </sidebar>
    <div class = "center">

      <div id = "navigation">
        <h1><%= @todays_date %></h1>
        <div>

          <div class = "gameinfo">

            <% @todays_broadcasts.each do |broadcast| %>

            <% if broadcast.home_team == team || broadcast.visitor_team == team %>

            <h2><%= broadcast.title %></h2>

            <h3><%=broadcast.time%></h3>

            <button class="likebutton" id=<%=broadcast.id %> value = "Broadcast" data-text-swap="Unlike">Like</button>



            <%broadcast.events.each do |event|%>

            <%=event.venue.name%>
            <%=event.blurb%>

            <% end %>


            <div class = "line"></div>
            <% end %>
            <% end %>



          </div>

        </div>
      </div>
    </article>
  </div>
  <%end%>
</body> 