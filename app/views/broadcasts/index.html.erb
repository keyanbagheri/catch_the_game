  <div class = "center">
    <div class = "forever_scroll">

      <!-- print out today's date -->
      <div id = "navigation">

        <!-- <h1><%#= @todays_date %></h1> -->
        <h1>Upcoming Games:</h1>
      </div>

      <!-- <div class = "gameinfo"> -->

        
        <!-- print out each broadcast (for today) -->
        <!-- title, time, like/unlike  -->
        <%# @todays_broadcasts.each do |broadcast| %>
          <!-- <h2><%#= broadcast.title %></h2> -->
          <!-- <h3><%#= broadcast.time%></h3> -->
          <!-- <button class="likebutton" id="<%#= broadcast.id %>" value="Broadcast" data-text-swap="Unlike">Like</button> -->
           
          <!-- print out each event for the broadcast -->
          <!-- venue name, blurb -->
          <%# broadcast.events.each do |event|%>  
            <%#=event.venue.name%>
            <%#=event.blurb%>
          <%# end %>
          
          <!-- <div class = "line"></div> -->
        <%# end %>

      <!-- </div> -->
      
    </div> <!-- forever_scroll -->
  </div>

  <script type="text/template" id="broadcastTemplate">
    <div class="gameinfo">

    <div class = "gametitle">
      <h2><a href="/search/teams?search_parameter=<%%= visitor_team.name %>"search_parameter=<%%=visitor_team.name %>><%%= visitor_team.name %></a> @ <a href="/search/teams?search_parameter=<%%= home_team.name %>"search_parameter=<%%=home_team.name %>><%%=home_team.name %></a></h2>
    </div>

    <div class="gamedate">
      <h3><%%= time %> | <%%= date_and_year %></h3>
    </div>
      
      <% if current_user %>
      <% if current_user_a_venue? %>
     <a href="events/new?broadcast=<%%= id %>" class="createEvent" value="Event"><button class="likebutton"> Host</button></a>
      <% else %>
      
      <button class="likebutton" id="<%%= id %>" value="Broadcast" data-text-swap="Unlike">Like</button>
      <% end %>
      <% end %><span class="likes_count" >Likes: (<%%= likes_count %>)</span>

      

      <div id='cssmenu'>
        <br>
        <ul>
          <li><span>EVENTS</span>
              <ul>
                <%% if(events[0]) { %>
                <li><a href='/events/<%%= events[0].id %>'><span><%%=events_venue_names[0]%></span></a></li>
                <%% } else { %>
                  <%% ("None");} %>
              </ul>
        </ul>
      </div>
      
 

      <div class="line"></div>
    </div>
  </script>


